@{
    ViewData["PreguntadOrt"] = "Home Page";
}

<h1 class="centro azul">CONFIGURAR JUEGO</h1>
    <br>
<div class="opciones">
<form action='@Url.Action("Comenzar")' method="post">
        <div class="mb-3">
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username" name="username" required>
            <div> 
                <select required name="dificultad">
                    <option selected disabled class="default">Dificultad</option>
                    @foreach(Dificultad item in ViewBag.dificultades)
                    {
                        <option value="@item.idDificultad">@item.nombre</option>
                    }
                    <option value="-1">Todas</option>
                </select>
                
                <select required name="categoria">
                    <option selected disabled class="default">Categoria</option>
                    @foreach(Categoria item in ViewBag.categorias)
                    {
                        <option value="@item.idCategoria">@item.nombre</option>
                    }
                    <option value="-1">Todas</option>
                </select>
            </div>
        </div>
        <br>
        <button type="submit" class="btn btn-a btn-primary">Empezar</button>
</form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>